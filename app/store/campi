// REDUCER
export default function reducer (state = [], action) {
  const nextState = Object.assign({}, state);
  switch (action.type) {

    case GET_CAMPI:
      return nextState.campi = action.campi;

    case GET_CAMPUS:
      return [...state, action.campus];

    default:
      return state;
  }
}
